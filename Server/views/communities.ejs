<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Communities</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/posts">My Blog</a>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/posts">Posts</a>
                    <a class="nav-link active" href="/communities">Communities</a>
                    <a class="nav-link" href="/profile">Profile</a>
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>All Communities</h2>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCommunityModal">Create Community</button>
            </div>

            <div class="row">
                <% if (communities && communities.length > 0) { %> <% communities.forEach(community => { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <% if (community.iconUrl) { %>
                                <img
                                    src="<%= community.iconUrl %>"
                                    alt="<%= community.name %>"
                                    class="rounded-circle me-3"
                                    width="50"
                                    height="50" />
                                <% } else { %>
                                <div
                                    class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                    style="width: 50px; height: 50px; font-size: 1.5rem">
                                    <%= community.name.charAt(0).toUpperCase() %>
                                </div>
                                <% } %>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">
                                        <a href="/communities/<%= community.id %>" class="text-decoration-none">r/<%= community.name %></a>
                                    </h5>
                                    <p class="card-text text-muted mb-1"><%= community.description %></p>
                                    <small class="text-muted"> <%= community.Members ? community.Members.length : 0 %> members </small>
                                </div>
                                <% const isMember = community.Members && community.Members.some(m => m.id === user.id) %> <% if (isMember) {
                                %>
                                <form action="/communities/<%= community.id %>/leave" method="POST">
                                    <button type="submit" class="btn btn-outline-danger">Leave</button>
                                </form>
                                <% } else { %>
                                <form action="/communities/<%= community.id %>/join" method="POST">
                                    <button type="submit" class="btn btn-primary">Join</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %> <% } else { %>
                <div class="col-12">
                    <p class="text-muted">No communities yet. Be the first to create one!</p>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Create Community Modal -->
        <div class="modal fade" id="createCommunityModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Create a Community</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/communities" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="name" class="form-label">Community Name</label>
                                <div class="input-group">
                                    <span class="input-group-text">r/</span>
                                    <input type="text" class="form-control" id="name" name="name" required />
                                </div>
                                <div class="form-text">Use only letters, numbers, and underscores</div>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="iconUrl" class="form-label">Icon URL (optional)</label>
                                <input type="text" class="form-control" id="iconUrl" name="iconUrl" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Create Community</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
