<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title><%= post.title || 'Post' %> - SocialApp</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">SocialApp</a>
                <div class="d-flex gap-2">
                    <a href="/posts" class="btn btn-outline-light btn-sm">Back to Posts</a>
                    <a href="/profile" class="btn btn-outline-light btn-sm">Profile</a>
                    <a href="/logout" class="btn btn-outline-light btn-sm">Logout</a>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Post Card -->
                    <div class="card shadow-sm mb-4">
                        <% if (post.imageUrl) { %>
                        <img
                            src="<%= post.imageUrl %>"
                            class="card-img-top"
                            alt="post-image"
                            style="max-height: 600px; object-fit: cover" />
                        <% } %>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <% if (post.User.Profile && post.User.Profile.avatarUrl) { %>
                                <img
                                    src="<%= post.User.Profile.avatarUrl %>"
                                    alt="<%= post.User.username %>"
                                    class="rounded-circle me-2"
                                    style="width: 50px; height: 50px; object-fit: cover" />
                                <% } else { %>
                                <div
                                    class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center me-2"
                                    style="width: 50px; height: 50px">
                                    <span class="text-white fs-5"><%= post.User.username.charAt(0).toUpperCase() %></span>
                                </div>
                                <% } %>
                                <div class="flex-grow-1">
                                    <h5 class="mb-0">
                                        <a href="/profile" class="text-decoration-none"><%= post.User.username %></a>
                                    </h5>
                                    <small class="text-muted"><%= new Date(post.createdAt).toLocaleString() %></small>
                                </div>
                            </div>

                            <h3 class="mb-3"><%= post.title %></h3>

                            <p class="card-text" style="white-space: pre-wrap"><%= post.content %></p>

                            <hr class="my-3" />

                            <!-- Like Section -->
                            <div class="d-flex gap-2 mb-3">
                                <form method="POST" action="/posts/<%= post.id %>/like" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        ‚ù§Ô∏è Like (<%= post.Likes ? post.Likes.length : 0 %>)
                                    </button>
                                </form>
                                <span class="text-muted small align-self-center">
                                    <% if (post.Likes && post.Likes.length > 0) { %> Liked by <%= post.Likes.length %> <%= post.Likes.length
                                    === 1 ? 'user' : 'users' %> <% } %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Comments Section -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="mb-3">Comments (<%= post.Comments ? post.Comments.length : 0 %>)</h5>

                            <!-- Add Comment Form -->
                            <form method="POST" action="/posts/<%= post.id %>/comment" class="mb-4">
                                <div class="input-group">
                                    <input type="text" name="content" placeholder="Add a comment..." class="form-control" required />
                                    <button type="submit" class="btn btn-primary">üí¨ Comment</button>
                                </div>
                            </form>

                            <!-- Comments List -->
                            <% if (post.Comments && post.Comments.length > 0) { %>
                            <div class="comments-list">
                                <% post.Comments.forEach((comment, index) => { %>
                                <div
                                    class="comment-item <%= index > 0 ? 'mt-3' : '' %> p-3 border-start border-3 border-primary bg-light rounded">
                                    <div class="d-flex align-items-start">
                                        <% if (comment.User.Profile && comment.User.Profile.avatarUrl) { %>
                                        <img
                                            src="<%= comment.User.Profile.avatarUrl %>"
                                            alt="<%= comment.User.username %>"
                                            class="rounded-circle me-2"
                                            style="width: 35px; height: 35px; object-fit: cover" />
                                        <% } else { %>
                                        <div
                                            class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center me-2 flex-shrink-0"
                                            style="width: 35px; height: 35px">
                                            <small class="text-white"><%= comment.User.username.charAt(0).toUpperCase() %></small>
                                        </div>
                                        <% } %>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <strong class="text-primary"><%= comment.User.username %></strong>
                                                <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
                                            </div>
                                            <p class="mb-0" style="white-space: pre-wrap"><%= comment.content %></p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                            <% } else { %>
                            <div class="text-center text-muted py-4">
                                <p class="mb-0">No comments yet. Be the first to comment!</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-5"></div>
    </body>
</html>
